<Application x:Class="FiindBrigeInGraf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FiindBrigeInGraf"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="ButtonsStyle" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="25 20 0 0"/>
        </Style>
        <Style x:Key="TextBlocksStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Times New Roman"/>
        </Style>

        <ControlTemplate x:Key="ellipseButton" TargetType="Button">
            <Border BorderThickness="3" BorderBrush="Black" Background="{TemplateBinding Background}" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" CornerRadius="90">
                <ContentControl HorizontalAlignment="Center" VerticalAlignment="Center" Content="{TemplateBinding Content}"/>                
            </Border>
            
        </ControlTemplate>

            

    </Application.Resources>
</Application>
